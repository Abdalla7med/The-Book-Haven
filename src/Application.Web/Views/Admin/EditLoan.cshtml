@model Application.Shared.UpdateLoanDto // Adjust the namespace accordingly

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit Loan";
}
<h2>Edit Loan</h2>

<form asp-action="EditLoan" method="post">
    <input type="hidden" asp-for="LoanId" />

    <div class="form-group">
        <label asp-for="DueTime"></label>
        <input asp-for="DueTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="DueTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReturnDate"></label>
        <input asp-for="ReturnDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="ReturnDate" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input type="checkbox" asp-for="IsReturned" class="form-check-input" />
        <label asp-for="IsReturned" class="form-check-label">Is Returned</label>
    </div>

    <div class="form-group form-check">
        <input type="checkbox" asp-for="IsDeleted" class="form-check-input" />
        <label asp-for="IsDeleted" class="form-check-label">Soft Delete</label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<div>
    <a asp-action="AllLoans" class="btn btn-secondary">Cancel</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

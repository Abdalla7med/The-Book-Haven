@model Application.Shared.UpdateBookDto // Adjust the namespace accordingly
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "EditBook";
}
<h2>Edit Book</h2>

<form asp-action="EditBook" method="post">
    <input type="hidden" asp-for="BookId" />
    <div class="form-group">
        <label asp-for="CoverUrl"></label>
        <input asp-for="CoverUrl" class="form-control" />
        <span asp-validation-for="CoverUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AvailableCopies"></label>
        <input asp-for="AvailableCopies" class="form-control" type="number" min="0" />
        <span asp-validation-for="AvailableCopies" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input type="checkbox" asp-for="IsDeleted" class="form-check-input" />
        <label asp-for="IsDeleted" class="form-check-label">Soft Delete</label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<div>
    <a asp-action="AllBooks" class="btn btn-secondary">Cancel</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

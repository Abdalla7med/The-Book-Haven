<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Author Dashboard</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li><a class="nav-link" href="@Url.Action("AuthoredBooks", "Author")">Authored Books</a></li>
                        <li><a class="nav-link" href="@Url.Action("PublishBook", "Author")">Publish Book</a></li>
                        <li><a class="nav-link" href="@Url.Action("EditProfile", "Account")">Edit Profile</a></li>
                    </ul>

                    <!-- Logout form -->
                    <ul class="navbar-nav ms-auto">
                        <li>
                            <form id="logoutForm" action="@Url.Action("Logout", "Account")" method="post" class="d-inline">
                                @Html.AntiForgeryToken() <!-- Adds a CSRF token for security -->
                                <button type="submit" class="btn btn-link nav-link text-light" style="border:none; background:none; padding:0;">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-auto">
        <p>© 2024 - Admin Footer</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
@model Application.Shared.UpdateUserDto

@{
    ViewData["Title"] = "Edit Profile";
}

<h2>Edit Profile</h2>

<!-- Displaying Validation Summary -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</strong>
    </div>
}

<form asp-action="EditProfile" enctype="multipart/form-data" method="post">
    <!-- Hidden field for the Id -->
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
